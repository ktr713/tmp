{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe アクティブなファイルのビルド",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				".\\src\\FeeTable.cpp",
				".\\src\\TableSwitchingLogic.cpp",
